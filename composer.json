{
    "name": "hatchyu/laravel-api-exceptions",
    "description": "General API exceptions for Laravel applications",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Hatchyu",
            "email": "team@hatchyu.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/auth": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.26",
        "rector/rector": "^2.3",
        "driftingly/rector-laravel": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Hatchyu\\ApiExceptions\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hatchyu\\ApiExceptions\\ApiExceptionsServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-main": "0.x-dev"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "format": "vendor/bin/pint"
    }
}
